<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@android:color/darker_gray"> <!-- Màu ripple khi nhấn -->

    <!-- Trạng thái bình thường -->
    <item>
        <shape>
            <solid android:color="#355DAD" />  <!-- Màu nền bình thường -->
            <corners android:radius="16dp" />  <!-- Bo góc -->
            <stroke android:color="#2E88C0" android:width="2dp" />  <!-- Đường viền -->
        </shape>
    </item>

    <!-- Hiệu ứng ripple khi nhấn -->
    <item android:id="@android:id/mask">
        <shape>
            <solid android:color="@android:color/white" /> <!-- Màu nền khi nhấn -->
            <corners android:radius="16dp" /> <!-- Bo góc giữ nguyên -->
        </shape>
    </item>
</ripple>
