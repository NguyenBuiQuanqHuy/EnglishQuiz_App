<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81A1D7"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Logo và Tên App -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="QuizMaker"
        android:textColor="#ffffff"
        android:textSize="55dp"
        android:textStyle="bold" />

    <!-- Slogan -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Xây dựng đề thi, chinh phục kiến thức!"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="italic" />

    <!-- Khung chứa các trường nhập liệu và nút đăng ký -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:alpha="0.8"
        android:backgroundTint="#DEDEDE"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"> <!-- Điều chỉnh alpha để khung trong suốt hơn -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Tiêu đề "Đăng nhập" trong khung -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:text="Đăng ký"
                android:textColor="#548AD7"
                android:textSize="30dp"
                android:textStyle="bold" />
            <!-- Trường nập tên người dùng -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="4dp"
                app:cardCornerRadius="16dp">

                <EditText
                    android:id="@+id/txtUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:hint="Tên người dùng"
                    android:padding="16dp"
                    android:textColor="#000000"
                    android:textColorHint="#9C000000"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>
            <!-- Trường Nhập Email -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="4dp"
                app:cardCornerRadius="16dp">

                <EditText
                    android:id="@+id/txtProfileEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:hint="Email"
                    android:padding="16dp"
                    android:textColor="#000000"
                    android:textColorHint="#9C000000"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <!-- Trường Nhập Mật Khẩu -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="4dp"
                app:cardCornerRadius="16dp">

                <EditText
                    android:id="@+id/txtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:hint="Mật khẩu"
                    android:inputType="textPassword"
                    android:padding="16dp"
                    android:textColor="#000000"
                    android:textColorHint="#9C000000"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <!-- Nút Đăng Ký -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#548AD7"
                android:fontFamily="sans-serif-medium"
                android:padding="12dp"
                android:text="Đăng ký"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="8dp" />

            <!-- Liên kết Quay Lại -->
            <TextView
                android:id="@+id/txtViewLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:onClick="LoginScreen"
                android:text="Đã có tài khoản? Đăng nhập"
                android:textColor="#3E6AA6"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
